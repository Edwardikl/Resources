<Window x:Class="resource2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:resource2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image x:Name="image" Source="{DynamicResource imgRes1}"/>
        <Button x:Name="bt1" Click="bt1_Click" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="100" Height="30" Content="Назад" Margin="20,0,0,20"/>
        <Button x:Name="bt2" Click="bt2_Click" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="100" Height="30" Content="Далее" Margin="0,0,20,20"/>
    </Grid>
</Window>
